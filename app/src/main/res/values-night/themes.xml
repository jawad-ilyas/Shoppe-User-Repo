<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shoppe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>

    </style>

    <style name="MyButtonStyle" >
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>
    <style name="simpleColor" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="simpleColorBlackWhite" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityBackground" >
        <item name="android:background">@color/black</item>
    </style>
    <style name="reyclerViewDesign" >
        <item name="android:background">@color/lightDark</item>
    </style>

    <style name="headingStyle" >
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subHeadingStyle" >
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subHeadingStyleWithBackground" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/lightlightDark</item>
    </style>
  <style name="subHeadingStyleWithBackgroundSmallSize" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/lightlightDark</item>
    </style>

    <!--  fields padding and color setting   -->

    <style name="fieldsStyle">
        <item name="android:textColor">@color/lightDark</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart">12dp</item>
        <item  name="android:layout_marginTop">5dp</item>



    </style>

    <style name="CustomheadingStyle" >
        <item name="android:color">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>